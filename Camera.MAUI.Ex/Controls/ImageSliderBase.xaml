<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Camera.MAUI.Ex.Models"
    x:Class="Camera.MAUI.Ex.Controls.ImageSliderBase"
    x:Name="This">
    
    <VerticalStackLayout>
        
        <Border 
            x:Name="OuterBorder" 
            StrokeThickness="0"
            Margin="0"
            Padding="0"
            HeightRequest="{Binding VideoService.ThumbnailHeight, Source={x:Reference This}}">
            
            <HorizontalStackLayout 
                BindableLayout.ItemsSource="{Binding VideoService.ThumbnailItems, Source={x:Reference This}}">
                
                <BindableLayout.ItemTemplate>
                    
                    <DataTemplate
                        x:DataType="model:Thumbnail">
                        
                        <Image
                            Source="{Binding ImageUrl}"
                            Margin="0"
                            VerticalOptions="Start"                                       
                            HorizontalOptions="Start"
                            HeightRequest="{Binding VideoService.ThumbnailHeight, Source={x:Reference This}}"
                            WidthRequest="{Binding VideoService.ThumbnailWidth, Source={x:Reference This}}"
                            Aspect="AspectFill"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>
