<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseVideoRecordPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Video_Demo.ViewModel"
    xmlns:controls="clr-namespace:Camera.MAUI.Ex.Controls;assembly=Camera.MAUI.Ex"
    xmlns:resources="clr-namespace:Camera.MAUI.Ex.Resources;assembly=Camera.MAUI.Ex"
    x:Class="Video_Demo.Views.VideoRecordPage"
    Title="{x:Static resources:Strings.PocHeader}"
    x:DataType="vm:VideoRecordViewModel"
    x:Name="This">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>
        
        <ContentView
            Grid.Row="0"
            Grid.Column="0"
            x:Name="VideoRecViewHolder"/>
        
        <Label
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Blue"
            TextColor="White"
            Text="This is the area for constituent and donation information"
            FontSize="14"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"/>
    </Grid>
</controls:BaseVideoRecordPage>