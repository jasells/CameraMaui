<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Video_Demo.ViewModel"
             xmlns:controls="clr-namespace:Camera.MAUI.Ex.Controls;assembly=Camera.MAUI.Ex"
             xmlns:resources="clr-namespace:Camera.MAUI.Ex.Resources;assembly=Camera.MAUI.Ex"
             x:Class="Video_Demo.Views.TrimmingPage"
             Title="{x:Static resources:Strings.TrimVideo}"             
             x:DataType="vm:TrimmingViewModel"
             x:Name="This">

    <ContentPage.Content>
        <!--all this needs to go into a VideoPreviewView-->
        <ScrollView>
            <controls:VideoPlayerView
                x:Name="PlayerView"
                IsVideoPreview="True">
                <!-- CameraOrientation="{Binding CameraOrientation}" -->
                <!-- PlayCommand="{Binding PlayCommand}" -->
                <!-- FilePath="{Binding FilePath}" -->
                <!--think these aren't needed 
                    ProgressVideoTime="{Binding ProgressVideoTime}"
                                    VideoViewHeight="{Binding VideoViewHeight}"
                VideoViewWidth="{Binding VideoViewWidth}"
                MediaPlayer="{Binding MediaPlayer}"
                -->

                <!-- Preview Layout 
                                        MediaPlayer="{Binding MediaPlayer}"-->
                <StackLayout 
                BackgroundColor="{x:Static resources:Colors.Snow}"
                IsVisible="True">

                    <controls:VideoPreviewSlider x:Name="Slider"
                        >
<!--FilePath="{Binding FilePath}"-->

                        <controls:VideoPreviewSlider.Behaviors>
                            <toolkit:EventToCommandBehavior 
                                EventName="SeekPlayer"                                               
                                Command="{Binding SeekPlayerCommand}"
                                CommandParameter="{Binding SeekCommandParameter, Source={x:Reference Slider}}"
                            />
                        </controls:VideoPreviewSlider.Behaviors>
                    </controls:VideoPreviewSlider>

                    <HorizontalStackLayout 
                        Margin="20,20,20,20" 
                        Spacing="20" 
                        HorizontalOptions="Center">

                        <Button
                        Text="{x:Static resources:Strings.StartOver}"
                        WidthRequest="150"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        TextColor="{x:Static resources:Colors.Blackbird}"
                        BackgroundColor="{x:Static resources:Colors.Snow}"
                        BorderColor="{x:Static resources:Colors.Blackbird60}"
                        BorderWidth="1"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        Clicked="OnStartOverClicked" />

                        <Button
                        Text="{x:Static resources:Strings.SaveVideo}"
                        WidthRequest="150"
                        HeightRequest="48"
                        HorizontalOptions="End"
                        TextColor="{x:Static resources:Colors.Snow}"
                        BackgroundColor="{x:Static resources:Colors.Leaf}"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        Command="{Binding NextCommand}" />
                    </HorizontalStackLayout>

                </StackLayout>
            </controls:VideoPlayerView>
        </ScrollView>
    </ContentPage.Content>    
</ContentPage>