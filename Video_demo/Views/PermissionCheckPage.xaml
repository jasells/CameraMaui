<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Video_Demo.Converters"
             xmlns:vm="clr-namespace:Video_Demo.ViewModel"
             x:DataType="vm:PermissionCheckViewModel"
             x:Class="Video_Demo.Views.PermissionCheckPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:Camera.MAUI.Ex.Controls;assembly=Camera.MAUI.Ex"
             Title="Camera Permissions"
             BackgroundColor="Gray">
    
    <VerticalStackLayout Spacing="25" Padding="30,30" 
                         VerticalOptions="Center">
        
        <controls:PlayPauseButton
            IsPlaying="{Binding IsPlaying}"/>
        
        <controls:PlayPauseButton
            IsPlaying="{Binding IsPlaying}"
            IconSize="60"/>
        
        <controls:PlayPauseButton
            IsPlaying="{Binding IsPlaying}"
            IconSize="80"/>
        
        <Button Text="Play/Pause"
                Command="{Binding PlayPauseCommand}"/>
        
        <Button 
            Text="Go to Camera Test"
            SemanticProperties.Hint="Checks camera and microphone permissions"
            Command="{Binding CheckPermissionsCommand}"
            IsEnabled="{Binding PermissionsGranted, Converter={toolkit:InvertedBoolConverter}}"
            HorizontalOptions="Center" 
            TextColor="Navy"/>

    </VerticalStackLayout>

</ContentPage> 