<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Video_Demo.ViewModel"
             x:Class="Video_Demo.Views.UploadTestPage"
             Title="UploadTestPage"
             x:Name="This">
    
    <VerticalStackLayout x:Name="rootLayout">
        <!--todo: put a lable showing file lendgth here?-->
        <Button x:Name="uploadBtn"
                Text="Upload video"
                IsEnabled="{Binding UploadEnabled}"
                Command="{Binding UploadVideoCommand}"/>
        
        <ContentView x:Name="progressHolder" Padding="16,16,16,16"/>
        
        <Label x:Name="statusLabel"
               Text="{Binding PageStatusInfo}"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>